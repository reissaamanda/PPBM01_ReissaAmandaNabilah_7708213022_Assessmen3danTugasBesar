<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info"
    android:orientation="vertical"
    android:background="@drawable/background_splashscreen">

    <ImageView
        android:id="@+id/cross"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/cross"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="RATE US"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/aileronheavy"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bagaimana aplikasi ini menurut Anda?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/alefregular"
        android:textAlignment="center"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="3.0"
        android:stepSize="0.5"
        android:outlineAmbientShadowColor="@color/blue"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rate"
        android:background="@drawable/style_button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:text="submit"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:onClick="showBottomSheet"
        android:fontFamily="@font/aileronheavy"/>

</LinearLayout>